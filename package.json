{
  "name": "wcasg-dashboard",
  "version": "1.0.0",
  "author": "Gabe Wyatt <gabe@solarixdigital.com>",
  "repository": "git@gitlab.solarixdigital.com:solarix/wcasg/dashboard.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "artisan:queue:work": "php artisan queue:work",
    "deploy": "yarn run deploy:permissions",
    "deploy:permissions": ". deploy/permissions.sh",
    "dev": "npm run development",
    "dev:db:mongo:ssh-tunnel": "ssh -L 4433:localhost:27017 root@167.172.199.242 -f -N",
    "dev:webservice:start": "cd ../pa11y-webservice-laravel && yarn run start",
    "development": "cross-env NODE_ENV=development node_modules/.bin/webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "db:dev": "docker-compose -f mysql.docker-compose.yml up",
    "db:dev:detached": "docker-compose -f mysql.docker-compose.yml up -d",
    "db:reset": "php artisan key:generate && php artisan config:cache && composer dump-autoload && php artisan migrate:fresh && php artisan passport:install && php artisan db:seed",
    "db:test:reset": "php artisan key:generate && php artisan config:cache && composer dump-autoload && php artisan migrate:fresh --database=mysql_testing && php artisan passport:install && php artisan db:seed",
    "db:seed": "php artisan migrate:refresh --seed",
    "db:test:seed": "php artisan migrate:refresh --database=mysql_testing --seed",
    "watch": "cross-env NODE_ENV=development node_modules/.bin/webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch-poll": "npm run watch -- --watch-poll",
    "hot": "cross-env NODE_ENV=development node_modules/.bin/webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "test": "php artisan config:cache && vendor/bin/phpunit",
    "ide:helper:generate": "php artisan ide-helper:generate",
    "ide:helper:models": "php artisan ide-helper:models --write",
    "serve:local:site": "serve tests/sites",
    "staging:supervisor:update": "sudo supervisorctl update && sudo supervisorctl start laravel-worker:*",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production node_modules/.bin/webpack --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.12.0",
    "axios": "^0.18",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "bootstrap": "^4.1.3",
    "compression-webpack-plugin": "^3.1.0",
    "cross-env": "^5.2.0",
    "jquery": "~3.4",
    "laravel-mix": "^5.0.4",
    "laravel-mix-purgecss": "^5.0.0-rc.1",
    "lodash": "^4.17.11",
    "popper.js": "^1.14.4",
    "prettier": "^1.19.1",
    "resolve-url-loader": "^3.1.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "serve": "^11.3.0",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-livereload-plugin": "^1.2.0"
  },
  "dependencies": {
    "bootswatch": "^4.1.3",
    "font-awesome": "^4.7.0",
    "js-beautify": "^1.10.1-rc2",
    "laravel-echo": "^1.6.1",
    "lz-string": "^1.4.4",
    "mjml": "^4.6.2",
    "pace-progress": "^1.0.2",
    "pusher-js": "^5.1.1",
    "query-string": "^5.1.1",
    "simple-line-icons": "^2.4.1",
    "sweetalert": "^2.1.2",
    "toastr": "^2.1.4",
    "validator": "^12.2.0",
    "vue-router": "^3.0.1",
    "vue-scrollto": "^2.13.0",
    "vue-strap": "github:wffranco/vue-strap",
    "vue-timeago": "^3.4.4"
  }
}
